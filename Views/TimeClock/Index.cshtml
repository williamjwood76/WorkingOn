<table class="table">
    <thead>        
        <tr>
            <th scope="col">Username</th>
            <th scope="col">UserShiftStart</th>
            <th scope="col">UserShiftEnd</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td scope="row">
                <input id="UserShiftStart" type="text" value="@DateTime.Now"/>
            </td>
            <td>
                <input id="txtUserShiftEnd" type="text" />
            </td>
            <td><button id="btnSaveUserShiftLog">Log Shift</button></td>
        </tr>
@foreach(var v in Model)
{
        <tr>
            <td scope="row">
                @v.UserName
            </td>
            <td>
                @v.UserShiftEnd
            </td>
            <td>
                @v.UserShiftEnd
            </td>
