@using Paychex_SimpleTimeClock.DatabaseObjects
@{
    ViewData["Title"] = "Time Clock";
    var _model = (List<object>)Model;
    var s = _model;
}

<div class="text-center">
    <h1 class="display-4">Welcome to the Secured Side</h1>
